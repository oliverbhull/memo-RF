{
  "audio": {
    "input_device": "default",
    "output_device": "default",
    "sample_rate": 16000
  },
  "vad": {
    "threshold": 0.05,
    "end_of_utterance_silence_ms": 1000,
    "min_speech_ms": 200,
    "hangover_ms": 200,
    "pause_tolerance_ms": 500
  },
  "stt": {
    "model_path": "/path/to/your/whisper/model.bin",
    "language": "en"
  },
  "llm": {
    "endpoint": "http://localhost:8080/completion",
    "timeout_ms": 5000,
    "max_tokens": 100,
    "model_name": "llama",
    "temperature": 0.7,
    "stop_sequences": ["</s>", "\n\n", "User:", "Human:"]
  },
  "tts": {
    "voice_path": "/path/to/your/piper/voice.onnx",
    "vox_preroll_ms": 200,
    "output_gain": 1.0
  },
  "tx": {
    "max_transmit_ms": 20000,
    "enable_start_chirp": false,
    "enable_end_chirp": false
  },
  "session_log_dir": "sessions",
  "enable_replay_mode": false,
  "replay_wav_path": ""
}
