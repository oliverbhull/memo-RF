{
  "audio": {
    "input_device": "0",
    "output_device": "1",
    "sample_rate": 16000
  },
  "vad": {
    "threshold": 0.09,
    "silence_threshold": 0.02,
    "start_frames_required": 2,
    "min_speech_ms": 200,
    "end_of_utterance_silence_ms": 450,
    "hangover_ms": 50,
    "pause_tolerance_ms": 250,
    "debug_log_rms_each_frame": false
  },
  "stt": {
    "model_path": "~/models/whisper/ggml-small-q5_1.bin",
    "language": "en",
    "blank_sentinel": "[BLANK_AUDIO]",
    "use_gpu": true
  },
  "transcript_gate": {
    "min_transcript_chars": 1,
    "min_transcript_tokens": 1,
    "min_confidence": 0
  },
  "transcript_blank_behavior": {
    "behavior": "none",
    "say_again_phrase": "Say again, over"
  },
  "clarifier": {
    "min_chars": 1,
    "min_confidence": 0,
    "unknown_sentinel": "__UNKNOWN__"
  },
  "router": {
    "repair_confidence_threshold": 0,
    "repair_phrase": "Say again, over"
  },
  "llm": {
    "endpoint": "http://localhost:11434/api/chat",
    "model_name": "qwen2.5:7b",
    "timeout_ms": 30000,
    "max_tokens": 100,
    "context_max_turns_to_send": 6,
    "keep_alive_sec": 300,
    "warmup_translation_model": false,
    "temperature": 0.3,
    "response_language": "",
    "stop_sequences": ["</s>", "\n\n", "User:", "Human:", "<|return|>", "<|end|>"],
    "truncation": { "fallback_phrase": "Stand by." }
  },
  "tts": {
    "voice_path": "~/models/piper/en_US-lessac-medium.onnx",
    "voice_models_dir": "",
    "piper_path": "",
    "espeak_data_path": "",
    "vox_preroll_ms": 350,
    "vox_preroll_amplitude": 0.55,
    "vox_end_tone_ms": 250,
    "vox_end_tone_amplitude": 0.55,
    "vox_end_tone_freq_hz": 440,
    "output_gain": 1
  },
  "tx": {
    "max_transmit_ms": 20000,
    "standby_delay_ms": 200,
    "channel_clear_silence_ms": 500,
    "enable_start_chirp": false,
    "enable_end_chirp": false
  },
  "wake_word": { "enabled": true },
  "tools": { "enabled": [], "timeout_ms": 5000, "max_concurrent": 1 },
  "memory": { "enabled": true, "max_messages": 20, "max_tokens": 2000 },
  "session_log_dir": "sessions",
  "enable_replay_mode": false,
  "replay_wav_path": "",
  "feed_server_url": ""
}
